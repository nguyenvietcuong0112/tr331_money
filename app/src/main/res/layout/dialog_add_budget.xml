<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Add Budget"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:hintEnabled="true"
        android:hint=""
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_budget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Budget Name"
            android:textColorHint="@color/grey"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/bg_add_budget"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:hintEnabled="true"
        android:hint=""
        android:textColorHint="@color/grey"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_budget_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_add_budget"
            android:hint="Amount"
            android:textColorHint="@color/grey"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/btn_cancel_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_cancel"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:textColor="#566029"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp" />

        <TextView
            android:id="@+id/btn_add_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/bg_save_button"
            android:textColor="@android:color/black"
            android:padding="10dp" />


    </LinearLayout>
</LinearLayout>